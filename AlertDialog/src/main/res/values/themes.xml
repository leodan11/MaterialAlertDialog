<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MaterialDialog" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MaterialDialog" parent="Base.Theme.MaterialDialog" />

    <!-- Theme for Dialog Title -->
    <style name="Theme.MaterialDialog.Title">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:layout_marginTop">@dimen/radiusTop</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Theme for Dialog Message -->
    <style name="Theme.MaterialDialog.Message">
        <item name="android:textSize">@dimen/text_message_size</item>
        <item name="android:layout_marginTop">@dimen/radiusTop</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Theme for Dialog Details -->
    <style name="Theme.MaterialDialog.Details">
        <item name="android:textSize">@dimen/text_message_size</item>
        <item name="android:layout_marginTop">@dimen/radiusTop</item>
        <item name="android:fontFamily">@font/montserrat_extra_light</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- Theme for Dialog Positive Button -->
    <style name="MaterialDialog.PositiveButton" parent="@style/Widget.Material3.Button.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <!-- Theme for Dialog Negative Button -->
    <style name="MaterialDialog.NegativeButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <!-- Theme for Dialog Negative Button -->
    <style name="MaterialDialog.NeutralButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <!-- Theme for Input Layout Cut -->
    <style name="CutInputLayout" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>